<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
            android:layout_width = "match_parent"
            android:layout_height = "wrap_content"
            android:id = "@+id/card_view"
            card_view:cardCornerRadius="10dp"
            card_view:cardPreventCornerOverlap="true"
            card_view:contentPadding="10dp"
            card_view:cardBackgroundColor="#ffffff"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        >
    <RelativeLayout
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        >
        <com.facebook.drawee.view.SimpleDraweeView
            android:id = "@+id/simpleView"
            android:layout_width = "match_parent"
            android:layout_height = "200dp"
            android:layout_below = "@id/article_title"
            android:background="@drawable/ic_launcher"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/course_title"
            android:textColor="@color/listview_title_color"
            android:textSize="@dimen/listview_article_title_size"
            android:layout_alignBottom="@id/simpleView"
            android:paddingBottom="5dp"
            android:layout_centerHorizontal="true"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/content"
            android:paddingTop="20dp"
            android:paddingBottom="10dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textColor="@color/activity_detail_content_text_color"
            android:textSize="@dimen/listview_article_content_size"
            android:text="@string/mainactivity_done_tag_text"
            android:maxLines = "4"
            android:ellipsize="end"
            android:layout_below="@id/simpleView"
            />
    </RelativeLayout>


</android.support.v7.widget.CardView>