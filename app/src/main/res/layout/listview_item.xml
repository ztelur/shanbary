<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="@color/listview_default_background"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/course_title"
        android:textColor="@color/activity_detail_content_text_color"
        android:textSize="@dimen/activity_detail_article_title_size"
        android:paddingLeft="20dp"
        android:layout_centerVertical="true"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/done_tag"
        android:textColor="@color/activity_detail_content_text_color"
        android:textSize="@dimen/activity_detail_article_title_size"
        android:text="@string/mainactivity_done_tag_text"
        android:visibility="gone"
        android:layout_alignParentRight="true"
        />

</RelativeLayout>